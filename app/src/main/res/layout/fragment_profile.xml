<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.ProfileFragment">

    <TextView
        android:id="@+id/text_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="@string/profile"
        android:textColor="@color/text_gray"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/image_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_my_data"
        app:layout_constraintBottom_toBottomOf="@id/text_my_data"
        android:src="@drawable/ic_person"
        app:tint="@color/icon_gray" />

    <TextView
        android:id="@+id/text_my_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/image_person"
        app:layout_constraintTop_toBottomOf="@id/text_hello"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="@string/my_data"
        android:textSize="23sp"
        android:textColor="@color/text_gray" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_my_data"
        android:layout_marginHorizontal="10dp"
        android:background="@color/background_gray"/>

    <ImageView
        android:id="@+id/image_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_log_out"
        app:layout_constraintBottom_toBottomOf="@id/text_log_out"
        android:src="@drawable/ic_log_out"
        app:tint="@color/icon_dark_red" />

    <TextView
        android:id="@+id/text_log_out"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/image_logout"
        app:layout_constraintTop_toBottomOf="@id/text_my_data"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="@string/logout"
        android:textSize="23sp"
        android:textColor="@color/text_dark_red" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_log_out"
        android:layout_marginHorizontal="10dp"
        android:background="@color/background_gray" />

</androidx.constraintlayout.widget.ConstraintLayout>